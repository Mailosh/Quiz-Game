<body>
    <div class="quiz-container" id="quiz">
        <div class="question" id="question">Otázka sa načítava...</div>
        <div class="options" id="options"></div>
        <div class="teams" id="teams">
            <div class="team" id="team1">1. tím: 0</div>
            <div class="team" id="team2">2. tím: 0</div>
            <div class="team" id="team3">3. tím: 0</div>
            <div class="team" id="team4">4. tím: 0</div>
        </div>
        <div class="controls">
            <button onclick="previousQuestion()"><-- Späť</button>
            <button onclick="nextQuestion()">Ďalej --></button>
            <button onclick="evaluateQuestion()">VYHODNOŤ</button>
        </div>
    </div>

    <script>
        const questions = [
            {
                question: "Ktoré mesto je známe ako kolíska renesancie?",
                options: ["Rím", "Florencia", "Paríž", "Atény"],
                correct: 1
            },
            {
                question: "Čo objavil Isaac Newton, keď mu na hlavu spadlo jablko?",
                options: ["Teóriu gravitácie", "Teóriu relativity", "Elektrinu", "Atómovú teóriu"],
                correct: 0
            },
            {
                question: "Ktorá rieka je najdlhšia na svete?",
                options: ["Amazonka", "Níl", "Jang-c'-ťiang", "Mississippi"],
                correct: 1
            },
            {
                question: "Ktoré jedlo pochádza z Talianska?",
                options: ["Sushi", "Pizza", "Burrito", "Tempura"],
                correct: 1
            },
            {
                question: "Ktorý chemický prvok má symbol O?",
                options: ["Vodík", "Dusík", "Kyslík", "Uhličitán"],
                correct: 2
            },
            {
                question: "Ktorý umelec namaľoval obraz 'Hviezdna noc'?",
                options: ["Van Gogh", "Picasso", "Rembrandt", "Da Vinci"],
                correct: 0
            },
            {
                question: "Ktorý kontinent má najviac krajín?",
                options: ["Ázia", "Afrika", "Európa", "Severná Amerika"],
                correct: 1
            },
            {
                question: "Aké je hlavné mesto Austrálie?",
                options: ["Sydney", "Melbourne", "Canberra", "Perth"],
                correct: 2
            },
            {
                question: "Ktorá planéta je známa ako Červená planéta?",
                options: ["Merkúr", "Mars", "Venuša", "Saturn"],
                correct: 1
            },
            {
                question: "Aký nápoj sa vyrába kvasením hroznovej šťavy?",
                options: ["Pivo", "Víno", "Whisky", "Vodka"],
                correct: 1
            }
        ];

        let currentQuestion = 0;
        let scores = [0, 0, 0, 0];

        function loadQuestion() {
            const questionElement = document.getElementById('question');
            const optionsElement = document.getElementById('options');

            questionElement.innerText = questions[currentQuestion].question;

            optionsElement.innerHTML = '';
            questions[currentQuestion].options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.classList.add('option');
                optionElement.innerText = `${String.fromCharCode(65 + index)}. ${option}`;
                optionElement.onclick = () => selectOption(index);
                optionsElement.appendChild(optionElement);
            });
        }

        function selectOption(index) {
            const options = document.querySelectorAll('.option');
            options.forEach(opt => opt.style.backgroundColor = '#f0f8ff');
            options[index].style.backgroundColor = '#dce7f2';
            questions[currentQuestion].selected = index;
        }

        function evaluateQuestion() {
            const selected = questions[currentQuestion].selected;
            if (selected === undefined) {
                alert('Prosím, označte odpoveď.');
                return;
            }

            if (selected === questions[currentQuestion].correct) {
                scores.forEach((_, index) => scores[index] += 1); // Dummy scoring for simplicity
                updateScores();
            }

            document.querySelectorAll('.option').forEach(opt => opt.onclick = null);
        }

        function updateScores() {
            for (let i = 0; i < scores.length; i++) {
                document.getElementById(`team${i + 1}`).innerText = `${i + 1}. tím: ${scores[i]}`;
            }
        }

        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                loadQuestion();
            } else {
                alert('Kvíz ukončený!');
            }
        }

        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                loadQuestion();
            }
        }

        loadQuestion();
    </script>
</body>
</html>
