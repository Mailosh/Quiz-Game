            padding: 10px;
            width: 22%;
            text-align: center;
        }

        .controls {
            display: flex;
            justify-content: space-between;
        }

        .controls button {
            background-color: #fce4ec;
            border: none;
            border-radius: 5px;
            padding: 10px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .controls button:hover {
            background-color: #f8bbd0;
        }
    </style>
